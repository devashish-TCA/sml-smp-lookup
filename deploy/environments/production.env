# Production Environment Configuration for Peppol Lookup Service
# Optimized for peppol-commons library usage and production performance

# Environment Configuration
PEPPOL_ENVIRONMENT=production
LOG_LEVEL=INFO

# SML Configuration
SML_DOMAIN_PRODUCTION=edelivery.tech.ec.europa.eu
SML_DOMAIN_TEST=acc.edelivery.tech.ec.europa.eu

# Timeout Configuration (optimized for production)
DNS_TIMEOUT_SECONDS=10
HTTP_TIMEOUT_SECONDS=30
OCSP_TIMEOUT_SECONDS=10

# Cache Configuration (longer TTL for production)
CACHE_TTL_SECONDS=3600
DNS_CACHE_TTL_SECONDS=300
CERTIFICATE_CACHE_TTL_SECONDS=1800

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT_SECONDS=60

# Performance Configuration (optimized for production load)
CONNECTION_POOL_MAX_CONNECTIONS=50
CONNECTION_POOL_MAX_PER_ROUTE=10
CONNECTION_POOL_VALIDATE_AFTER_INACTIVITY_MS=30000

# Security Configuration (strict for production)
ENABLE_DNSSEC_VALIDATION=true
ENABLE_CERTIFICATE_REVOCATION_CHECK=true
ENABLE_ENDPOINT_CONNECTIVITY_TEST=false

# Monitoring Configuration
ENABLE_CLOUDWATCH_METRICS=true
ENABLE_XRAY_TRACING=true
METRICS_NAMESPACE=Peppol/Lookup

# Peppol-Commons Configuration (production optimized)
PEPPOL_COMMONS_CACHE_ENABLED=true
PEPPOL_COMMONS_VALIDATION_STRICT=true
PEPPOL_COMMONS_DEBUG_MODE=false