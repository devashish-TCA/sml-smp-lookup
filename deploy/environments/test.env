# Test Environment Configuration for Peppol Lookup Service
# Optimized for peppol-commons library usage and integration testing

# Environment Configuration
PEPPOL_ENVIRONMENT=test
LOG_LEVEL=INFO

# SML Configuration
SML_DOMAIN_PRODUCTION=edelivery.tech.ec.europa.eu
SML_DOMAIN_TEST=acc.edelivery.tech.ec.europa.eu

# Timeout Configuration
DNS_TIMEOUT_SECONDS=12
HTTP_TIMEOUT_SECONDS=35
OCSP_TIMEOUT_SECONDS=12

# Cache Configuration
CACHE_TTL_SECONDS=1800
DNS_CACHE_TTL_SECONDS=300
CERTIFICATE_CACHE_TTL_SECONDS=900

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=4
CIRCUIT_BREAKER_RECOVERY_TIMEOUT_SECONDS=45

# Performance Configuration
CONNECTION_POOL_MAX_CONNECTIONS=30
CONNECTION_POOL_MAX_PER_ROUTE=8
CONNECTION_POOL_VALIDATE_AFTER_INACTIVITY_MS=20000

# Security Configuration
ENABLE_DNSSEC_VALIDATION=true
ENABLE_CERTIFICATE_REVOCATION_CHECK=true
ENABLE_ENDPOINT_CONNECTIVITY_TEST=false

# Monitoring Configuration
ENABLE_CLOUDWATCH_METRICS=true
ENABLE_XRAY_TRACING=true
METRICS_NAMESPACE=Peppol/Lookup/Test

# Peppol-Commons Configuration
PEPPOL_COMMONS_CACHE_ENABLED=true
PEPPOL_COMMONS_VALIDATION_STRICT=true
PEPPOL_COMMONS_DEBUG_MODE=false