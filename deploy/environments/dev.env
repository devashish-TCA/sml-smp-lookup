# Development Environment Configuration for Peppol Lookup Service
# Optimized for peppol-commons library usage and development testing

# Environment Configuration
PEPPOL_ENVIRONMENT=dev
LOG_LEVEL=DEBUG

# SML Configuration
SML_DOMAIN_PRODUCTION=edelivery.tech.ec.europa.eu
SML_DOMAIN_TEST=acc.edelivery.tech.ec.europa.eu

# Timeout Configuration (relaxed for development)
DNS_TIMEOUT_SECONDS=15
HTTP_TIMEOUT_SECONDS=45
OCSP_TIMEOUT_SECONDS=15

# Cache Configuration (shorter TTL for development)
CACHE_TTL_SECONDS=900
DNS_CACHE_TTL_SECONDS=180
CERTIFICATE_CACHE_TTL_SECONDS=600

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT_SECONDS=30

# Performance Configuration
CONNECTION_POOL_MAX_CONNECTIONS=20
CONNECTION_POOL_MAX_PER_ROUTE=5
CONNECTION_POOL_VALIDATE_AFTER_INACTIVITY_MS=15000

# Security Configuration (relaxed for development)
ENABLE_DNSSEC_VALIDATION=false
ENABLE_CERTIFICATE_REVOCATION_CHECK=true
ENABLE_ENDPOINT_CONNECTIVITY_TEST=true

# Monitoring Configuration
ENABLE_CLOUDWATCH_METRICS=true
ENABLE_XRAY_TRACING=true
METRICS_NAMESPACE=Peppol/Lookup/Dev

# Peppol-Commons Configuration
PEPPOL_COMMONS_CACHE_ENABLED=true
PEPPOL_COMMONS_VALIDATION_STRICT=false
PEPPOL_COMMONS_DEBUG_MODE=true